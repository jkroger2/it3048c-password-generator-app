<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PasswordGenerator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:PasswordGenerator.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="White"
    Shell.TabBarForegroundColor="Black"
    Shell.TabBarTitleColor="Black"
    Shell.TabBarUnselectedColor="Gray">

    <TabBar>
        <ShellContent
            Title="Vault"
            Icon="lock.png"
            ContentTemplate="{DataTemplate pages:VaultPage}" />

        <ShellContent
            Title="Generator"
            Icon="refresh.png"
            ContentTemplate="{DataTemplate pages:GeneratorPage}" />

        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </TabBar>
</Shell>
